{{>header}}
{{>navbar}}

<section class="container my-5">
    <form method="post">
        <div class="mb-3">
            <input type="text" placeholder="title" name="title" class="form-control" value="{{postData.title}}">
        </div>

         <div class="mb-3">
            <input type="text" placeholder="content" name="content" class="form-control" value="{{postData.content}}">
        </div>

         <div class="mb-3">
            <input type="date" placeholder="date" name="date" class="form-control" value="{{postData.date}}">
        </div>

        <div class="mb-3">
            <input type="text" placeholder="status" name="status" class="form-control"  value="{{postData.status}}">
        </div>

         <div class="mb-3">
            <button class="btn btn-primary">Edit</button>
        </div>
    </form>
</section>

{{>footer}}