{{>header}}
{{>navbar}}



<section class="container my-5">
        <h3 class="text-center text-primary">All Tasks</h3>
    <table class="table table-border">
        <thead>
            <tr>
                <th>#id</th>
                <th>Task</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
          {{#if isEmpty}}
          <tr>
            <td colspan="3" class="text-center font-weight-bold">no tasks to show</td>
          </tr>
          {{/if}}
          {{#each data}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.title}}</td>
                <td>
                    <a href="/single/{{this._id}}" class="btn btn-primary">Show</a>
                <a href="/edit/{{this._id}}" class="btn btn-warning">edit</a>
                <a href="/delete/{{this._id}}" class="btn btn-danger">delete</a>
                </td>
            </tr>
          {{/each}}

        </tbody>

    </table>
</section>

{{>footer}}